    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h1 class="font">Editar receita</h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/receitas/edit"  method="post">
            <input type="hidden" value="{{receita._id}}" name="id">
            <label for="titulo" class="">TÃ­tulo: </label>
            <input type="text" name="titulo" class="form-control" value="{{receita.titulo}}" required>
            <label for="slug" class="">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{receita.slug}}" required>
            <label for="ingredientes" class="">Ingredientes: </label>
            <input type="text" name="ingredientes" class="form-control" value="{{receita.ingredientes}}" required>
            <label for="modopreparo" class="">Modo de preparo</label>
            <textarea name="modopreparo" class="form-control" required>{{receita.modopreparo}}</textarea>
            <br>
            <label for="categoria" class="">Categoria: </label>
            <select name="categoria" class="form-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select><br>
            <button class="btn btn-success mt-4">Editar receita</button>
        </form>
    </div>
</div>