<h1 class="font">Nova receita</h1>
<div class="card-body box">
    <div class="box">
        <form action="/admin/receitas/nova"  method="post">
            <label for="titulo" class="fonte">TÃ­tulo: </label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug" class="fonte">Slug: </label>
            <input type="text" name="slug" class="form-control" required>
            <label for="ingredientes" class="fonte">Ingredientes: </label>
            <input type="text" name="ingredientes" class="form-control" required>
            <label for="modopreparo" class="fonte">Modo de preparo</label>
            <textarea name="modopreparo" class="form-control"></textarea>
            <br>
            <label for="categoria" class="fonte">Categoria: </label>
            <select name="categoria" class="form-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select><br>
            <button class="btn btn-success mt-4">Adicionar receita</button>
        </form>
    </div>
</div>