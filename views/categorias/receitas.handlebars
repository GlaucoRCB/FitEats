<h1 class="fonte">{{categoria.nome}}</h1>
{{#each receitas}}
<br>
<div class="card">
    <div class="card-body">
        <h3 class="">{{titulo}}</h3>
        <p class="">{{modopreparo}}</p>
        <a href="/receita/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small class="">Data de publicação: {{data}}</small>
        <hr>
    </div>
</div>
{{else}}
    <h5 class="">Nenhuma receita</h5>
{{/each}}